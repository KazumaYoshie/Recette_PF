<div class="container">
   
  <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>edit</h2>
       <div class="form-group">
         <%= form_with model: @post, local: true do |f| %>
         <label>Title</label>
          <%= f.text_field :title, class: "form-control" %>
         <label>Image</label>
         <%= f.attachment_field :picture, class: "form-control-file" %>
         <label>Recipe</label>
         <%= f.text_area :cook, class: "form-control" %>
         <%= f.submit 'hozon' %>
       </div>
       <% end %>
     </div>
   </div>
</div>
